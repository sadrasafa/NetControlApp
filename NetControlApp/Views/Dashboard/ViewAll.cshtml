@model IEnumerable<NetControlApp.Models.AnalysisModel>
<link rel="stylesheet" href="~/assets/css/index.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="contentView">
    @foreach (var item in Model)
    {
        @if (item.IsCompleted == true)
        {
            <div class="row" style="background-color: lightgreen">
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style=" border-bottom:solid 1px rgba(223,235,213,0.35)">
                    <b>@Html.DisplayFor(modelItem => item.AnalysisName)</b>
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="border-bottom:solid 1px rgba(223,235,213,0.35)">
                    @Html.DisplayFor(modelItem => item.Progress)%
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm">
                    @Html.DisplayFor(modelItem => item.AlgorithmType)
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm">
                    @Html.DisplayFor(modelItem => item.Time)
                </p>
                <p class="col-lg-12 col-md-12 cold-sm-12 col-xs-12" style="align-content:center; text-align:right; font-size:120%; ">
                    <a asp-action="Edit" asp-route-id="@item.RunId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RunId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RunId">Delete</a>
                </p>
            </div>
        }
        else
        {
            <div class="row" style="background-color:lightblue">
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style=" border-bottom:solid 1px rgba(223,235,213,0.35)">
                    <b>@Html.DisplayFor(modelItem => item.AnalysisName)</b>
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="border-bottom:solid 1px rgba(223,235,213,0.35)">
                    @Html.DisplayFor(modelItem => item.Progress)%
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm">
                    @Html.DisplayFor(modelItem => item.AlgorithmType)
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm">
                    @Html.DisplayFor(modelItem => item.Time)
                </p>
                <p class="col-lg-12 col-md-12 cold-sm-12 col-xs-12" style="align-content:center; text-align:right; font-size:120%; ">
                    <a asp-action="Edit" asp-route-id="@item.RunId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RunId">Details</a><i class="fa fa-level-down" style="font-size:50%"></i>|
                    <a asp-action= "Delete" asp-route-id= "@item.RunId" > Delete </a >
                </p >

        </div >
        }
    }

</div>



<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>
