@model IEnumerable<NetControlApp.Models.AnalysisModel>
<link rel="stylesheet" href="~/assets/css/index.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="contentView">
    @foreach (var item in Model)
    {
        @if (item.IsCompleted == true)
        {
    <div class="row">
        <a asp-action="Details" asp-route-id="@item.RunId">
            <section class="row inside col-lg-6 col-md-6 col-sm-6 col-xs-6" style=" background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #10cc1ede), color-stop(1, #1e4fae33) );
                filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#10cc1ede', endColorstr='#1e4fae33')">
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style=" color:black;border-bottom:solid 1px rgba(223,235,213,0.35)">
                    <b>@Html.DisplayFor(modelItem => item.AnalysisName)</b>
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="color:black;border-bottom:solid 1px rgba(223,235,213,0.35)">
                    @Html.DisplayFor(modelItem => item.Progress)%
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="color:black;">
                    @Html.DisplayFor(modelItem => item.AlgorithmType)
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="color:black;">
                    @Html.DisplayFor(modelItem => item.Time)
                </p>
                <p class="col-lg-12 col-md-12 cold-sm-12 col-xs-12" style="align-content:center; text-align:right; font-size:120%; ">
                    <a asp-action="Stop" asp-route-id="@item.RunId">Stop </a><i class="fa fa-stop" style="font-size:100%"></i> |
                    <a asp-action="Details" asp-route-id="@item.RunId">Details </a><i class="fa fa-level-down" style="font-size:100%"></i> |
                    <a asp-action="Delete" asp-route-id="@item.RunId">Delete </a><i class="fa fa-close" style="font-size:100%"></i>
                </p>
            </section>
        </a>
        <section class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="margin:0;padding:0;max-height:5rem;width:50%;display:inline-block;float:right;top:-14rem;left:-5rem">
            <i class="fa fa-check" style="font-size:600%"></i>
        </section>
    </div>
        }
        else
        {
    <div class="row">
        <a asp-action="Details" asp-route-id="@item.RunId">
            <section class="row inside col-lg-6 col-md-6 col-sm-6 col-xs-6" style="color:black; display:inline-block; background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #243ad7de), color-stop(1, #1e4fae33) );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#243ad7de', endColorstr='#1e4fae33')">

                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="color:black; border-bottom:solid 1px rgba(223,235,213,0.35)">
                    <b>@Html.DisplayFor(modelItem => item.AnalysisName)</b>
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="color:black;border-bottom:solid 1px rgba(223,235,213,0.35)">
                    @Html.DisplayFor(modelItem => item.Progress)%
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="color:black;">
                    @Html.DisplayFor(modelItem => item.AlgorithmType)
                </p>
                <p class="col-lg-6 col-md-6 col-sm-6 col-xs-6 itemm" style="color:black;">
                    @Html.DisplayFor(modelItem => item.Time)
                </p>
                <p class="col-lg-12 col-md-12 cold-sm-12 col-xs-12" style="align-content:center; text-align:right; font-size:120%; ">
                    <a asp-action="Stop" asp-route-id="@item.RunId">Stop </a><i class="fa fa-stop" style="font-size:100%"></i> |
                    <a asp-action="Details" asp-route-id="@item.RunId">Details </a><i class="fa fa-level-down" style="font-size:100%"></i>|
                    <a asp-action="Delete" asp-route-id="@item.RunId"> Delete </a><i class="fa fa-close" style="font-size:100%"></i>
                </p>
            </section>
        </a>

            <section class="col-lg-6 col-md-6 col-sm-6 col-xs-6" style="margin:0;padding:0;max-height:5rem;width:50%;display:inline-block;float:right;top:-14rem;left:-5rem">
                <a asp-action="ViewAll"> <i class="fa fa-refresh" style="font-size:600%; color:black"></i></a>
            </section>
    </div>

        }
    }

</div>



<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>
