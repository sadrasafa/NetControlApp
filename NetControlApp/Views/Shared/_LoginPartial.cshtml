@using Microsoft.AspNetCore.Identity
@using NetControlApp.Models
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="fa fa-user" style="font-size:150%; color:white"></i>  @UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fa fa-sign-out" style="font-size:150%; color:white"></i>  Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"><i class="fa fa-address-book-o" style="font-size:150%; color:white"></i> Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in" style="font-size:150%; color:white"></i> Log in</a></li>
    </ul>
}
